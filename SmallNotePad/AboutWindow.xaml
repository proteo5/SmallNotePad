<Window x:Class="SmallNotePad.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About SmallNotePad" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <StackPanel Margin="30" VerticalAlignment="Center">
        <!-- App Name -->
        <TextBlock Text="SmallNotePad" FontSize="36" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        
        <!-- Version -->
        <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Description -->
        <TextBlock Text="A lightweight, feature-rich text editor built with WPF and .NET 10" 
                   FontSize="12" TextAlignment="Center" Foreground="#555555" Margin="0,0,0,20" TextWrapping="Wrap"/>
        
        <!-- Developer Info -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Developer:" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,5"/>
            <TextBlock Text="Alfredo Pinto Molina (aka Proteo5)" FontSize="12" Foreground="#555555" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Technology -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Built with:" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,5"/>
            <TextBlock Text="• C# 14.0" FontSize="12" Foreground="#555555" Margin="10,0,0,0"/>
            <TextBlock Text="• .NET 10" FontSize="12" Foreground="#555555" Margin="10,0,0,0"/>
            <TextBlock Text="• Windows Presentation Foundation (WPF)" FontSize="12" Foreground="#555555" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- GitHub Link -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="GitHub:" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,5"/>
            <TextBlock Text="https://github.com/proteo5/SmallNotePad" FontSize="12" Foreground="#0066CC" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- License -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="License: MIT" FontSize="12" Foreground="#555555"/>
        </StackPanel>

        <!-- Close Button -->
        <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="100" HorizontalAlignment="Center" Padding="10,8" Foreground="White" Background="#0066CC" FontSize="12" Cursor="Hand"/>
    </StackPanel>
</Window>
