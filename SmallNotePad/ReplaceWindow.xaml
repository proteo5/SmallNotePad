<Window x:Class="SmallNotePad.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Replace" Height="160" Width="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Find what:" VerticalAlignment="Center" Width="80"/>
            <TextBox x:Name="SearchTermTextBox" Width="280" VerticalAlignment="Center" Padding="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Replace with:" VerticalAlignment="Center" Width="80"/>
            <TextBox x:Name="ReplaceTermTextBox" Width="280" VerticalAlignment="Center" Padding="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="ReplaceAllButton" Content="Replace All" Click="ReplaceAllButton_Click" Width="80" Margin="0,0,5,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="70"/>
        </StackPanel>
    </StackPanel>
</Window>
