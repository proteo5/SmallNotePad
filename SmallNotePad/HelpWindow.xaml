<Window x:Class="SmallNotePad.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help - SmallNotePad" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    <DockPanel>
        <!-- Title Bar -->
        <Border DockPanel.Dock="Top" Background="#0066CC" Padding="20">
            <TextBlock Text="Help Topics" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Content -->
        <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Getting Started -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Getting Started" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock Text="SmallNotePad is a simple yet powerful text editor designed for Windows. It provides essential text editing features with a clean and intuitive interface." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- File Operations -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="File Operations" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock Text="Opening Files: Use File → Open (Ctrl+O) to open a text file. You can browse and select any .txt file from your computer." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Saving Files: Use File → Save (Ctrl+S) to save your current document. If you haven't saved before, you'll be prompted to choose a location and filename." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Save As: Use File → Save As (Ctrl+Shift+S) to save your document with a new name or location." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Close: Use File → Close (Ctrl+W) to close the current document. You'll be prompted to save if there are unsaved changes." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Editing Text -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Editing Text" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock Text="Undo: Use Edit → Undo (Ctrl+Z) to undo your last action." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Cut, Copy, Paste: Use the standard shortcuts (Ctrl+X, Ctrl+C, Ctrl+V) to cut, copy, and paste text." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Select All: Use Ctrl+A to select all text in the document." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Finding and Replacing -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Finding and Replacing Text" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock Text="Find: Use Edit → Find (Ctrl+F) to open the Find dialog. Enter the text you want to search for and click 'Find All' to search." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Find Next: Press F3 or use Edit → Find Next to go to the next occurrence of your search term." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Find Previous: Press Shift+F3 or use Edit → Find Previous to go to the previous occurrence." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Replace: Use Edit → Replace (Ctrl+H) to open the Replace dialog. Enter the text to find and the replacement text, then click 'Replace All'." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- View Options -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="View Options" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock Text="Word Wrap: Use View → Word Wrap to enable or disable text wrapping. When enabled, long lines will wrap to the next line instead of extending beyond the window." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Keyboard Shortcuts -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Keyboard Shortcuts" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,30,0">
                            <TextBlock Text="Ctrl+O" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+S" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+Shift+S" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+W" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+Z" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+X" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+C" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+V" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+F" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+H" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="F3" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Shift+F3" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Ctrl+A" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                            <TextBlock Text="Alt+F4" FontWeight="Bold" Foreground="#0066CC" Margin="0,0,0,5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Open file" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Save file" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Save As" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Close file" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Undo" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Cut" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Copy" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Paste" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Find" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Replace" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Find Next" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Find Previous" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Select All" Foreground="#555555" Margin="0,0,0,5"/>
                            <TextBlock Text="Exit" Foreground="#555555" Margin="0,0,0,5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Tips -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Helpful Tips" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock Text="• The title bar shows the filename and a (*) asterisk appears if there are unsaved changes." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• SmallNotePad supports tab characters and line breaks in your documents." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• When closing a document with unsaved changes, you'll be prompted to save." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• Search is case-insensitive by default." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="• You can open multiple files by closing the current one and opening a new one." 
                               FontSize="12" Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Spacing at end -->
                <TextBlock Text="" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Border DockPanel.Dock="Bottom" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="100" Padding="10,8" Foreground="White" Background="#0066CC" FontSize="12" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
